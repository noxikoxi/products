FROM node:23-slim AS builder

WORKDIR /app

COPY package*.json ./
COPY vite.config.* ./
RUN npm install --ignore-scripts

COPY . .

RUN npm run build

FROM nginx:alpine AS runner

COPY --from=builder /app/dist /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]